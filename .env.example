# Servidor
PORT=3000
NODE_ENV=development

# Banco de Dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=estrutura_simplificada
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_RESET_EXPIRES_IN=1h
JWT_VERIFY_EXPIRES_IN=24h
JWT_INVITE_EXPIRES_IN=7d

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass
SMTP_FROM=noreply@example.com

# OCR
OCR_MODEL_PATH=./models/tessdata
OCR_LANGUAGE=por
OCR_CONFIDENCE_THRESHOLD=0.7
OCR_MAX_RETRIES=3
OCR_TIMEOUT=30000

# Cache
CACHE_TTL=3600
CACHE_PREFIX=app:

# Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DIR=./uploads

# Rate Limit
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_WINDOW_MS=900000
AUTH_MAX_REQUESTS=5
UPLOAD_WINDOW_MS=3600000
UPLOAD_MAX_REQUESTS=10
ANALYSIS_WINDOW_MS=3600000
ANALYSIS_MAX_REQUESTS=5
REPORT_WINDOW_MS=3600000
REPORT_MAX_REQUESTS=5
API_WINDOW_MS=900000
API_MAX_REQUESTS=100
DOWNLOAD_WINDOW_MS=3600000
DOWNLOAD_MAX_REQUESTS=20
SHARE_WINDOW_MS=3600000
SHARE_MAX_REQUESTS=10

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=10 